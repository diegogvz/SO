{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Simulator",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/Simulator",
      "args": ["prog-V2-E6-1"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
